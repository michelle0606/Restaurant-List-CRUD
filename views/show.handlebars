<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://i.postimg.cc/JG2gFgJg/logo.png" width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <div class="icon">
        <span><a href="/restaurants/{{{store._id}}}/edit?_method=PUT"><i class="fas fa-edit"></i></a></span>
        <span><a href="/"><i class="fas fa-sign-out-alt"></i></a></span>
        <span>
          <form action="/restaurants/{{{store._id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
            <button class="trash"><i class="fas fa-trash-alt"></i></button></form>
        </span>
      </div>
    </div>
  </nav>

  <div class="banner"></div>
</header>
<h1 class="mb-1 restaurant-show-title">{{store.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{store.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{store.location}}
        <a href="{{store.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{store.phone}}
      </p>

      <p class="mb-5">
        {{store.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{store.image}}" alt="{{store.name}}" style="max-width: 600px;">
    </div>
  </div>
</div>