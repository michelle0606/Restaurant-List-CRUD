<div class="container-form"></div>
<form action="/restaurants/{{{store._id}}}" method="POST" class="edit">
  <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="商家名稱（中文）" name="name" value="{{{store.name}}}">
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="商家名稱（英文）" name="name_en" value="{{{store.name_en}}}">
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <div class="col">
        <input type="text" class="form-control" placeholder="類別" name="category" value="{{{store.category}}}">
      </div>
    </div>
    <div class="form-group col-md-4">
      <div class="col">
        <input type="text" class="form-control" placeholder="電話" name="phone" value="{{{store.phone}}}">
      </div>
    </div>
    <div class="form-group col-md-4">
      <div class="col">
        <input type="text" class="form-control" placeholder="評價" name="rating" value="{{{store.rating}}}">
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="地址" name="location" value="{{{store.location}}}">
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="Google Map上的網址" name="google_map" value="{{{store.google_map}}}">
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col">
      <input type="text" class="form-control" placeholder="圖片" name="image" value="{{{store.image}}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col">
      <input type="text" class="form-control" placeholder="描述" name="description" value="{{{store.description}}}">
    </div>
  </div>
  <div class="edit-button">
    <button type="submit" class="btn btn-primary">修改</button>
  </div>
</form>