<div class="add">
  <a href="/restaurant/new">新增餐廳</a>
</div>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner row">
      <form action="/search" class="col-6">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{{keyword}}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="col-6">
        <select name="sort" id="sort">
          <option selected="selected" disabled="disabled" style='display: none' value=''>餐廳排序</option>
          <option value="http://localhost:3000/restaurants/5cb1afda584234823c9236b4">A->Z</option>
          <option value="/restaurants/5cb1afda584234823c9236b4">Z->A</option>
          <option value="/restaurants/5cb1afda584234823c9236b4">類別</option>
          <option value="/restaurants/5cb1afda584234823c9236b4">地區</option>
        </select>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="button-box">
              <a href="/restaurants/{{{this._id}}}">詳細資訊</a>
              <a href="/restaurants/{{{this._id}}}/edit">修改</a>
              <form action="/restaurants/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-dark">刪除</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>