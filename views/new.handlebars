<div class="container-form"></div>
<form action="/restaurants" method="POST" class="new-form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="商家名稱（中文）" name="name" required>
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="商家名稱（英文）" name="name_en" required>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-5">
      <div class="col">
        <input type="text" class="form-control" placeholder="類別" name="category" required>
      </div>
    </div>
    <div class="form-group col-md-5">
      <div class="col">
        <input type="text" class="form-control" placeholder="電話" name="phone" required>
      </div>
    </div>
    <div class="form-group col-md-2">
      <div class="col">
        <input type="number" class="form-control" min="0" max="5" placeholder="評價" name="rating" step="0.1" required>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="地址" name="location" required>
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="col">
        <input type="text" class="form-control" placeholder="Google Map上的網址" name="google_map">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col">
      <input type="text" class="form-control" placeholder="圖片" name="image" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col">
      <input type="text" class="form-control" placeholder="描述" name="description" required>
    </div>
  </div>
  <div style="text-align:right;">
    <button type="submit" class="btn btn-info">新增</button>
  </div>
</form>